{
  "name": "okna-project",
  "version": "1.0.0",
  "description": "Многостраничный проект с автоматической компиляцией SCSS",
  "main": "index.js",
  "scripts": {
    "scss": "sass --watch src/scss:dist/css --style expanded",
    "scss:build": "sass src/scss:dist/css --style expanded && npm run minify",
    "minify": "postcss dist/css/*.css --use cssnano --dir dist/css --ext .min.css --no-map",
    "dev": "npm-run-all --parallel scss serve",
    "serve": "live-server --port=3000 --open=index.html",
    "build": "npm run scss:build"
  },
  "keywords": ["html", "css", "scss", "javascript"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.69.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "cssnano": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "live-server": "^1.2.2"
  }
}
